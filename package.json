{
  "name": "react-template",
  "version": "2.0.0",
  "private": true,
  "homepage": "https://www.my.com",
  "dependencies": {
    "husky": "^1.1.3",
    "isomorphic-fetch": "^2.2.1",
    "lint-staged": "^8.0.4",
    "mixins-sass": "^1.1.3",
    "mobx": "^4.3.1",
    "mobx-react": "^5.3.6",
    "ncp": "^2.0.0",
    "node-sass": "^4.10.0",
    "prettier": "^1.14.3",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-loadable": "^5.5.0",
    "react-loader-spinner": "^2.2.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.1",
    "source-map-explorer": "^1.6.0"
  },
  "scripts": {
    "analyze": "source-map-explorer build/static/js/main.*",
    "start": "react-scripts start",
    "build:test": "ncp .env.production.test .env.production.local && react-scripts build",
    "build:pro": "ncp .env.production.pro .env.production.local && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "./node_modules/.bin/eslint  -c .eslintrc ./src --fix && stylelint src/**/*.css  --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
